{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "noEmit": true,
    // "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    // "baseUrl": ".",
    // "outDir": ".",
    "allowJs": true,
    "types": [
      "element-plus/global"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@img/*": [
        "./src/assets/img/*"
      ],
      "@api/*": [
        "./src/api/*"
      ],
      "@comp*": [
        "./src/components/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.cts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/iconfont.js"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
